n1 = int(input("Digite um valor ? "))
n2 = int(input("Digite outro valor? "))
s = n1 + n2
su = n1 - n2
e = n1 ** n2
m = n1 * n2
di = n1 / n2
dr = n1 // n2
rd = n1 % n2
ra2 = n1*(1/2)
ra3 = n2*(1/3)
print("A soma é {}, A subtracao e {}, A potecina {},".format(s, su, e) , end="")
print("A divisao inteira é {:.3f}, O resto divisor é {}, A radiacao quadrada é , A radiacao cubica é {}".format(di, rd, ra2, ra3))



